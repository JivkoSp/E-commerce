@page
@model BooksPlace.Pages.Login.SignInModel


<form method="post">
    <label for="UserName">Username or email address </label>
    <input id="UserName" type="text" asp-for="UserName"/> <br />
    <label for="Password">Password </label>
    <input id="Password" type="password" asp-for="Password"/><br />
    <button type="submit">Sign in</button>
</form>

<p>New to BooksPlace? <a asp-page="/Register/SignUp">Create an account</a></p>