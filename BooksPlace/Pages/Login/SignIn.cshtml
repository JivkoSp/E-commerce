@page
@model BooksPlace.Pages.Login.SignInModel


<form method="post" class="SignIn-Form">
    <div class="SignIn-Form-Header">
        <label>Sign in</label>
    </div>
    <div class="SignIn-Form-UserName-Container">
        <label for="UserName">Username or email address </label>
        <input id="UserName" type="text" asp-for="UserName"  placeholder="User name"/> <br />
    </div>
    <div class="SignIn-Form-Password-Container">
        <label for="Password">Password </label>
        <input id="Password" type="password" asp-for="Password"  placeholder="Password"/><br />
    </div>
    <button type="submit">Sign in</button>
</form>

<div class="SignIn-Footer">
    New to BooksPlace? 
    <a asp-page="/Register/SignUp">Create an account</a>
</div>